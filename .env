# Docker image versions for services
USER_SERVICE_IMAGE=user-service:latest
PRODUCT_SERVICE_IMAGE=product-service:latest
PAYMENT_SERVICE_IMAGE=payment-service:latest

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password

# Slack Webhook for Alerts (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# PagerDuty API Key (optional)
PAGERDUTY_API_KEY=your_pagerduty_api_key

# Alert Email
ALERT_EMAIL=your_alert_email@example.com

# SMTP Settings (optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_AUTH=true
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=alerts@yourdomain.com